{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
                "label": "Build",
                "type": "shell",
                "group": "build",
                "command": "make",
                "problemMatcher": [
                    "$gcc"
                ]
            },
            {
                "label": "Clean",
                "type": "shell",
                "group": "build",
                "command": "make clean",
                "problemMatcher": [
                    "$gcc"
                ]
            },
            {
                "label": "Flash ST",
                "type": "shell",
                "group": "build",
                "command": "~/soft/STMicroelectronics/STM32CubeProgrammer/bin/STM32_Programmer_CLI -c port=SWD -d build/sdtest.elf -hardRst",
                "problemMatcher": [
                    "$gcc"
                ]
        },
            {
                "label": "Flash OpenOCD",
                "type": "shell",
                "group": "build",
                "command": "openocd -f ./stm32f4discovery.cfg -c \"init\" -c \"reset init\" -c \"flash write_image erase build/sdtest.hex\" -c \"reset\" -c \"shutdown\"",
                "problemMatcher": [
                    "$gcc"
                ]
        }

    ]
}